ALGORITHM check_point4
VAR
    arr : ARRAY_OF INTEGER[30];
    i,j:INTEGER;
BEGIN
    PROCEDURE tri_simple(VAR arr:ARRAY_OF INTEGER)
    VAR
        aux:INTEGER;
    BEGIN
        FOR i FROM 0 TO (length(arr)-1)STEP 1  DO
           FOR j FROM 0 TO (i-1) STEP 1  DO
               IF (arr[i]<arr[j]) THEN
                   aux:=arr[j];
                   arr[j]:=arr[i];
                   arr[i]:=aux;
               END_IF
           END_FOR
        END_FOR
    END
    
END